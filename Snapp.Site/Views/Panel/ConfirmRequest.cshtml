@model Snapp.Core.ViewModels.Panel.TransactViewModel

<div class="container">
    <div class="row">

        <div class="col-12">
            <h1 class="text-center">تأیید سفر</h1>
        </div>

        <form asp-action="ConfirmRequest">
            <div class="col-12">
                <div class="form-group d-none">
                    <input asp-for="UserId" class="form-control " />
                </div>
                <div class="form-group d-none">
                    <input asp-for="StartLat" class="form-control " />
                </div>
                <div class="form-group d-none">
                    <input asp-for="EndLat" class="form-control " />
                </div>
                <div class="form-group d-none">
                    <input asp-for="StartLng" class="form-control " />
                </div>
                <div class="form-group d-none">
                    <input asp-for="EndLng" class="form-control " />
                </div>
                <div class="form-group d-none">
                    <input asp-for="Fee" class="form-control " />
                </div>
            </div>
            <div class="col-12">
                <div class="form-group">
                    <img src="~/img/42550-oncoming-taxi-icon.png" alt="Snapp" class="img-responsive" style="margin: auto" />
                </div>
            </div>
            <div class="col-12">
                <div class="form-group">
                    <h3>@Model.Fee.ToString("n0") ریال</h3>
                </div>
            </div>
            <div class="col-12">
                <div class="form-group">
                    <input type="submit" value="تأیید" class="btn btn-info btn-fill" />
                </div>
            </div>
        </form>

    </div>
</div>
