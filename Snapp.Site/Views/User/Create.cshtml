@model Snapp.Core.ViewModels.dashbord_admin.UserViewModel

@{
    ViewData["Title"] = "ثبت کاربر";
    Layout = "~/Views/Shared/_DashbordLayout.cshtml";
}

<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <div class="card">
            <div class="header">
                <h4 class="title pull-right">ثبت کاربر</h4>
                <h4 class="title pull-left">
                    <a href="/User/Index" class="btn btn-danger">
                        بازگشت
                    </a>
                </h4>
            </div>
            <div class="clearfix"></div>
            <div class="content">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="RoleId" class="control-label"></label>
                        <select class="form-control" asp-for="RoleId" asp-items="ViewBag.RoleId"></select>
                        <span asp-validation-for="RoleId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Username" class="control-label"></label>
                        <input asp-for="Username" class="form-control" placeholder="شماره همراه" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="IsActive" class="control-label"></label>
                        <input asp-for="IsActive" type="checkbox" />
                    </div>
                    @*<div class="form-group">
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                                </label>
                            </div>
                        </div>*@
                    <div class="form-group">
                        <input type="submit" value="ثبت و بازگشت" class="btn btn-info btn-fill" />

                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

